# Database
DATABASE_URL=sqlite:///./data/watchdog.db

# Storage
STORAGE_BACKEND=local
STORAGE_PATH=./data/files

# OpenAI
OPENAI_API_KEY=sk-your-key-here

# Security
# IMPORTANT: Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-random-string-in-production
# Admin token for /admin access. Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_TOKEN=

# Email (for magic links)
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-password
MAIL_FROM=noreply@example.com
MAIL_USE_TLS=true

# App settings
APP_NAME=Watchdog
APP_URL=http://localhost:8000
# SECURITY: Set to false in production to avoid verbose error messages
DEBUG=false

# Rate limiting
CONNECTOR_RATE_LIMIT=1.0
CONNECTOR_USER_AGENT=CivicWatchdog/1.0 (contact@example.com)

# LLM budget (monthly, in euros)
LLM_MONTHLY_BUDGET=10.0
